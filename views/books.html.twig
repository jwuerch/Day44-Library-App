<!DOCTYPE html>
<html>
    {% include 'header.html' %}
    <body>
        <div class="container">
                <div class="row">

                <!-- ADD BOOK FORM -->
                <div class="col-sm-6">
                <form action="/add_book" method="post" class="form1">
                    <h4>Add A Book To Your Library:</h4>
                    <br>
                    <div class="form-group">
                        <label for="title">Add Title</label>
                        <input id="title" name="title" class="form-select" type="text" placeholder="Ishmael" required>
                    </div>

                    <div class="form-group">
                        <label for="genre">Add Genre</label>
                        <input id="genre" name="genre" class="form-select" type="text" placeholder="Sci-Fi" required>
                    </div>

                    <div class="form-group">
                        <label for="copies">How Many Copies?</label>
                        <input id="copies" name="copies" class="form-select" type="number" placeholder="0" required>
                    </div>
                    <button type="submit" class="button btn-primary">Add</button>
                </form>
                <br>
                <!-- DELETE FORM -->
                <br>
                <form action="/search_books">
                    <div class="form-group">
                        <label for="search_term">Search for Specific Books By Title</label>
                        <input id="search_term" name="search_term" type="search" class="form-select">
                    </div>
                    <button type="submit" class="btn btn-success">Search</button>
                </form>
                <br>
                {% for result in results %}
                <ul>
                    <li>{{ result.getTitle }}</li>
                </ul>
                {% endfor %}
            </div>
            <div class="col-sm-6">
                <h4>Here Are Your Current Books:</h4>
                <br>
                <ul>
                    {% for book in all_books %}
                        <li><a href="/book/{{ book.getId }}">{{ book.getTitle }}</a></li>
                            <ul>
                                <li><span style="text-decoration:underline;">Genre</span>: {{ book.getGenre }}</li>
                            </ul>
                    {% endfor %}
                <ul>
                    <br>
                <form action="/delete_all_books" method="post">
                    <button class="btn btn-danger">Delete ALL Books</button>
                </form>
            </div>
        </div>
        </div>
    </body>
    {% include 'footer.html' %}
</html>
